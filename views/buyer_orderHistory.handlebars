<html>
	<head>
		<title>Buyer Order History Page</title>

		<meta charset="utf-8">
 		<meta name="viewport" content="width=device-width, initial-scale=1.0">
 		<link href="/css/bootstrap.css" rel="stylesheet">
 		<link href="/css/bootstrap-theme.css" rel="stylesheet">
 		<link href="/css/buyer_orderHistory.css" rel="stylesheet">

 		<!-- Use internet source for icons-->
 		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	</head>

	<body>
		<div class = "container">

			<div id="myHeader" class="header">
 				<table>
 					<td><div class="topIcon"><a href="./buyer_home"><i class="material-icons" style="font-size:50px;">backspace</i></a></div></td>
 					<td><h2>Order History</h2></td>
 				</table>
 			</div>

			<div class="content">
			<h3>Incompleted Orders</h3>
			<div id="incompleted">
			{{#each incompleted_items}}
			<div class = "history">
				<table>
					<tr>
						<td rowspan="3">
      						<img src="{{imageURL}}">
      					</td>
      					<td colspan="2">
      							<h4 class = "item_name">{{name}}</h4>
      					</td>
      					<td></td>
      				</tr>
					<tr>
      					<td>
      						<p><Strong>Total: </strong>{{total}}</p>
      					</td>
      					<td>
      						<p><Strong>Pickup Time: </Strong>{{pickupTime}}</p>
      					</td>
      				</tr>
					<tr>
						<td colspan="2">
							<p><Strong>Pickup Address: </Strong>{{pickupLocation}}</p>
						</td>
					</tr>
				</table>
			</div>
			<button>Complete Order</button>
			{{/each}}
			</div>

			<h3>Completed Orders</h3>
			<div id="completed">
			{{#each completed_items}}
			<div class = "history">
				<table>
					<tr>
						<td rowspan="2">
      						<img src="{{imageURL}}">
      					</td>
      					<td colspan="2">
      							<h4 class = "item_name">{{name}}</h4>
      					</td>
      					<td></td>
      				</tr>
      					<td>
      						<p><Strong>Price: </strong>{{price}}</p>
      						<p><Strong>Distance: </Strong>{{distance}}</p>
      					</td>
      					<td>
      						<p><Strong>Seller Rating: </Strong>{{sellerRating}}</p>
      						<p><Strong>Pickup Time: </Strong>{{pickupTime}}</p>
      					</td>
      				<tr>
				</table>
			</div>
			<button>Rate Seller</button>
			{{/each}}
			</div>
			</div>

			<script src="/js/jquery-1.11.0.js"></script>
			<script src="/js/bootstrap.js"></script>
			<script src="/js/userHome.js"></script>
		</div>
	</body>
</html>
